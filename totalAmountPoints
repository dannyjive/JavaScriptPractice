function points(games) {
  let ourTeamPoints = 0;
  
  for (n = 0; n < games.length; n++) {
    
    const gameScores = games[n].split(':')
    
    if (gameScores[0] > gameScores[1]){
      ourTeamPoints += 3;
    } if (gameScores[0] === gameScores[1]){
      ourTeamPoints += 1;
    } else {
      ourTeamPoints += 0;      
    } 

  } 
    
 return ourTeamPoints;
 
}
